<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.model.mapper.FavoriteMapper">
<!-- FavoriteDaoImpl 가져오기 --> 

	<insert id="insertFav" parameterType="favoriteDto">
		insert into favorite (user_id, base_code) 
		values #{userId}, #{baseCode}
	</insert>
	
	<update id="updateFav" parameterType="favoriteDto">
		update favorite 
		set base_code = #{baseCode}
		where user_id = #{userId}
	</update>
	
	<delete id="deleteFav">
	delete from favorite
	where user_id = #{userId} and base_code = #{baseCode}
	</delete>
	
	<select id="selectFav" resultType="favoriteDto">
	select * from favorite
	where user_id = #{userId} and base_code = #{baseCode}
	</select>
	
	<select id="selectByUserId" parameterType="int" resultType="favoriteDto">
	select * from favorite
	where user_id = #{userId}
	</select>
	
	<select id="selectByBaseCode" parameterType="long" resultType="favoriteDto">
	select * from favorite
	where base_code = #{baseCode}
	</select>
	
</mapper>